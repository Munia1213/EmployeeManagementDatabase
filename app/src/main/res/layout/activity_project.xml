<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.munia.employeemanagement.ProjectActivity">

    <EditText
        android:id="@+id/pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Project name"/>

    <EditText
        android:id="@+id/pro_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Project number"/>
    <EditText
        android:id="@+id/pro_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Project member"/>

    <Button
        android:id="@+id/add_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"/>

    <Button
        android:id="@+id/go_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Home"/>

</LinearLayout>
